{
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "csrf-csrf": "^2.2.3",
        "exifreader": "^4.9.2",
        "express": "^4.18.2",
        "http": "^0.0.1-security",
        "ipaddr.js": "^2.0.1",
        "json5": "^2.2.3",
        "multer": "^1.4.5-lts.1",
        "node-rest-client": "^3.1.1",
        "open": "^8.4.0",
        "png-chunk-text": "^1.0.0",
        "png-chunks-encode": "^1.0.0",
        "png-chunks-extract": "^1.0.0",
        "rimraf": "^3.0.2",
        "sanitize-filename": "^1.6.3",
        "sharp": "^0.31.3",
        "webp-converter": "^2.3.3"
    },
    "name": "TavernAI",
    "version": "1.3.1",
    "bin": {
        "TavernAI": "server.js"
    },
    "scripts": {
        "format": "prettier --ignore-unknown --write .",
        "type-check": "tsc -b .",
        "postinstall": "run-p postinstall:*",
        "postinstall:1": "node ./node_modules/husky-v4/lib/installer/bin install",
        "postinstall:2": "patch-package"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*": [
            "prettier --ignore-unknown --write"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "useTabs": false
    },
    "rules": {
        "no-path-concat": "off",
        "no-var": "off"
    },
    "pkg": {
        "assets": [
            "node_modules/sharp/build/Release/**/*",
            "node_modules/sharp/vendor/lib/**/*",
            "node_modules/open/xdg-open/",
            "public",
            "uploads"
        ]
    },
    "devDependencies": {
        "@tsconfig/node18-strictest-esm": "^1.0.1",
        "@types/cookie-parser": "^1.4.3",
        "@types/dompurify": "^3.0.0",
        "@types/express": "^4.17.17",
        "@types/jquery": "^3.5.16",
        "@types/jquery.cookie": "^1.4.32",
        "@types/jquery.transit": "^0.9.31",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.15.10",
        "@types/sharp": "^0.31.1",
        "@types/showdown": "^2.0.0",
        "husky-v4": "^4.3.8",
        "lint-staged": "^13.2.0",
        "npm-run-all": "^4.1.5",
        "patch-package": "^6.5.1",
        "prettier": "^2.8.6",
        "typescript": "^5.0.2"
    }
}
